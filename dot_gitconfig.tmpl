[user]
	email = ashirbad.behera@gocomet.com
	name = Ashirbad

[alias]
	co = checkout
	cm = commit
	cnv = commit --no-verify
	pnv = push --no-verify
	fpush = push --force-with-lease --no-verify
	st = status
	br = branch
	unstage = reset HEAD --
	last = lg -1 HEAD
	f = --no-verify
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[core]
	editor = code --wait
	pager = delta
	excludeFile = /home/ashirbad/.gitignore_global

[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false # required for git 2.37.0

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)

[diff]
    colorMoved = default
[init]
	defaultBranch = main
[rerere]
	enabled = true
[maintenance]
	repo = /home/ashirbad/work/frontend-service
